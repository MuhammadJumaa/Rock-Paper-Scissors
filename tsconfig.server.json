{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "noEmit": false,
    "jsx": "react",
    "esModuleInterop": true,
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
